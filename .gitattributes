# Auto detect text files and perform LF normalization
* text=auto

# Windows batch files must use CRLF
*.bat text eol=crlf

# Shell scripts must use LF
*.sh text eol=lf

# Python files use LF
*.py text eol=lf

# Config files use LF
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Markdown files use LF
*.md text eol=lf
